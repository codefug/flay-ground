{
  "name": "flayground",
  "private": true,
  "version": "0.0.0",
  "description": "Flay your code. Play your code. This is Flayground.",
  "license": "MIT",
  "author": "codefug",
  "type": "esm",
  "main": "index.js",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:pure": "cd apps/pure && python3 -m http.server 8080",
    "dev:react": "turbo run dev --filter=react",
    "dev:web": "turbo run dev --filter=web",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "turbo": "^2.6.1",
    "typescript": "5.9.2"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=18"
  }
}
